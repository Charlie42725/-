model Series {
  id          Int       @id @default(autoincrement())
  brand       Brand     @relation(fields: [brandId], references: [id], onDelete: Cascade)
  brandId     Int
  name        String
  slug        String
  description String?
  coverImage  String?
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  products    Product[]

  @@unique([brandId, slug])
}

// -----------------------------
